<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= Rinku.auto_link(micropost.content).html_safe %>
  </span>

    <% (URI.extract(micropost.content, /http(s)?/)).each do |url| %>
      <span class="content"> <%= LinkThumbnailer.generate(url).title %>
                             <%= favicon_link_tag LinkThumbnailer.generate(url).favicon %>
      </span>
      <span class="content"> <%= LinkThumbnailer.generate(url).description%>  </span>
      <span class="content">
      <%= image_tag LinkThumbnailer.generate(url).images.first.src.to_s %>
      </span>
    <% end %>

  <span class="content">
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                  data: { confirm: "You sure?" } %>
    <% end %>
  </span>

</li>



